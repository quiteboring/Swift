root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,kt}]
indent_style = space
indent_size = 2

[*.kt]
max_line_length = 120
ij_kotlin_imports_layout = *, java, javax, kotlin, static *
ij_kotlin_allow_trailing_comma = true

[*.java]
max_line_length = 120
ij_java_imports_layout = *, java, javax, static *

[*.{kts,xml,yml,json,md}]
indent_style = space
indent_size = 2